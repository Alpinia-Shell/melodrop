<h2>ユーザー編集画面</h2>
  <%= form_with model: @user do |f| %>
    <div class="field">
      <%= f.label :name , ":ユーザーネーム" %><br />
      <%= f.text_field :name, autofocus: true %>
    </div>

    <div class="field">
      <%= f.label :profile_image , ":プロフィール画像" %><br />
      <%= f.file_field :profile_image, accept: 'image/*' %>
    </div>

    <div class="field">
      <%= f.label :name , ":ユーザーネーム" %><br />
      <%= f.text_field :name, autofocus: true %>
    </div>

    <div class="field">
      <%= f.label :introduction , ":自己紹介" %><br />
      <%= f.text_field :name, autofocus: true %>
    </div>
    <%= f.submit "保存する" %>
  <% end %>

  <%= link_to "戻る", posts_path %>
  <%= link_to "退会する", users_destroy_confirm_path %>