<div class = "container">
  <h2 class = "my-3">ユーザー 一覧</h2>
  <table class = "table">
    <tr>
      <th>User ID</th>
      <th>画像</th>
      <th>名前</th>
      <th>登録メールアドレス</th>
      <th>ステータス</th>
    </tr>
    
    <% @users.each do |user| %>
      <tr>
        <td><%= user.id %></td>
        <td><%= image_tag user.get_profile_image(90,90) %></td>
        <td><%= link_to admin_user_path(user) do %>
              <%= user.name %>
            <% end %>
        </td>
        <td><%= user.email %></td> 
        <% if user.is_active %>
        <td><span class="text-success fw-bold"><%= t("enums.user.is_active.#{user.is_active}") %></span></td>
        <% else %>
        <td><span class="text-danger fw-bold"><%= t("enums.user.is_active.false") %></span></td>
        <% end %>
      </tr>  
    <% end %>

  </table>
</div>