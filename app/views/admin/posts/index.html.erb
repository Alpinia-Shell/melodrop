<div class = "container">
  <h2><span style= "border-bottom: 2px solid; ">投稿一覧</span></h2>
  <table class = "table">
    <thead>
      <tr>
        <th>投稿ID</th>
        <th>画像</th>
        <th>タイトル</th>
        <th>本文</th>
        <th>投稿日</th>
        <th>更新日</th>
      </tr>
    </thead>
    <% @posts.each do |post| %>
      <tr style = "height: 100px;">
        <td><%= post.id %></td>
        <td>
          <% if post.image.attached? %>
            <%= image_tag post.image, size: "100x100" %>
          <% else %>
            <%= "※画像はありません※" %>
          <% end %>
        </td>
        <td><%= post.title %></td>
        <td><%= post.body %></td>
        <td><%= post.created_at.strftime('%Y/%m/%d') %></td>
        <td><%= post.updated_at.strftime('%Y/%m/%d') %></td>
      </tr>
    <% end%>
  </table>
</div>
