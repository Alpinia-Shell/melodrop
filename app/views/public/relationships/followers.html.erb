<div class="row d-flex">
  <!-- 左サイドバー（PCのみ表示） -->
  <div class="col-2 p-0 bg-light sidebar d-none d-md-block">
    <%= render 'public/users/sidebar' %>
  </div>

  <div class= "col-12 col-md-8" >
    <h3 class= "mt-4 text-center">
      <%= image_tag 'teru.jpg', style:"width:5%; height: 10%;" %>
      <span class= "border-bottom border-info">
        <%= @user.name %>さんを見守るアメフラシ
      </span>
      <%= image_tag 'teru.jpg', style:"width:5%; height: 10%;" %>
    </h3>
    <% if @users.present? %>
      <%= render 'public/relationships/follow.index', users: @users %>
    <% else %>
      <h5 class= "text-center mt-5 text-secondary">
        <%= @user.name %>さんを見守るアメフラシはまだいないようです
      <h5>
    <% end %>
  </div>
  <!-- 右サイドバー（PCのみ表示） -->
  <div class="col-2 p-0 bg-light sidebar d-none d-md-block">
    <%= render 'public/posts/sidebarleft' %>
  </div>
</div>