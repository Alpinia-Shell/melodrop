<% posts.each do |post| %>
  <%= link_to post_path(post), style: "width: 100%;" ,class: "text-decoration-none text-dark" do %>
    <div class="w-100 border-top p-4">
      <div class="row d-flex justify-content-center">
        <div class="col-12 col-md-2 text-center">
          <%= image_tag post.user.get_profile_image(100, 100), class: "rounded-circle border border-black" %>
          <div class="mt-3"><%= post.user.name %></div>

          <p class= "mt-5"><i class="fa-solid fa-comment" style="color: #5ad3cb;"></i> <%= post.post_comments.count %></p>
          <p class= "mt-3"><i class="fa-solid fa-bottle-droplet" style="color: #74C0FC;"></i> <%= post.favorites.count %></p>
        </div>

        <div class="col-12 col-md-8 d-flex flex-column text-center justify-content-center">
          <h4 class="py-3 fw-bold"><%= post.title %></h4>
          <% if post.image.attached? %>
            <div class="mx-auto mb-3 d-flex align-items-center justify-content-center rounded"
                style="width:300px; height:300px; background-color:#f0f0f0; max-width: 100%;">
              <%= image_tag post.image, style: "max-height:100%; max-width:100%; object-fit:contain;" %>
            </div>
          <% end %>
          <div class="text-truncate-multiline mx-auto"><%= simple_format(post.body) %></div>
        </div>

        <div class="col-12 col-md-2 p-0"></div>
      </div>
    </div>
  <% end %>
<% end %>