<div class = "row">
  <%# サイドバー左 %>
  <div class ="col-2 p-0">
    <%= render 'public/users/sidebar' %>
  </div>

  <div class="col-8 p-0 mt-5 d-flex flex-column align-items-center">
    <div class="w-100 border-top p-4">
      <div class="row">
        <div class="col-2 text-center">
          <%= link_to user_path(@post.user), style: "width: 100%;" do %>
            <%= image_tag @post.user.get_profile_image(100,100),class: "rounded-circle border border-black" %>
            <div class="mt-3">
              <%= @post.user.name %>
            </div>
          <% end %>
        </div>
        <div class="col-8 d-flex flex-column text-center justify-content-center">
          <h4 class="py-3 fw-bold"><%= @post.title %></h4>
          <% if @post.image.attached?%>
            <div class="mx-auto mb-3 d-flex align-items-center justify-content-center rounded" style="width: 300px; height: 300px; background-color: #f0f0f0;">
              <%= image_tag @post.image, style: "max-height: 100%; max-width: 100%; object-fit: contain;" %>
            </div>
          <% end %>
          <%= simple_format(@post.body) %>
          <% if @post.user == current_user %>
            <%= link_to "編集", edit_post_path(@post) %>
            <%= link_to "削除", post_path(@post), method: :delete, data: {confirm: "本当に削除するの？(´・ω・`)"} %>
          <% end %>

          <div class = "row border-top">
            <%# コメント表示 %>
            <% @post.post_comments.each do |post_comment| %>
              <div class = "col-3">
                <%= image_tag post_comment.user.get_profile_image(100,100) , class: "rounded-circle border black" %>
                <%= post_comment.user.name %>
              </div>
              <div class = "col-9">
                <%= post_comment.comment %>
              </div>
            <% end %>
          </div>

          <%# コメントフォーム %>
          <div class = "mt-5">
            <%= form_with model: [@post, @post_comment] do |f| %>
              <%= f.text_area :comment, rows: '5', placeholder: "コメントをここに書いてね", class: "form-control" %>
              <%= button_tag type: "submit", class: " btn btn-outline-primary mt-3" do  %>
                そうしん<i class="fa-regular fa-paper-plane" style="color: #74C0FC;"></i>
              <% end %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>

  <%# サイドバー右 %>
  <div class = "col-2">
    <%= render 'public/posts/sidebarleft' %>
  </div>
</div>