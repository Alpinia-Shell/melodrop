
  <h2 class= "my-3"><span style= "border-bottom: 3px solid; border-color: orange;"> コメント一覧</span></h2>
  <table class = "table border-dark table-hover">
    <thead>
      <tr class= "border-top border-dark">
        <th style= "white-space: nowrap;" class= "bg-info-subtle">コメントID</th>
        <th class= "bg-info-subtle">本文</th>
        <th class= "bg-info-subtle">投稿日</th>
      </tr>
    </thead>
    <% comments.each do |comment| %>
      <tr style = "height: 80px;">
        <td><%= link_to comment.id, admin_post_comment_path(comment) %></td>
        <td><div class= "table-text-truncate"><%= comment.comment %></div></td>
        <td><%= comment.created_at.strftime('%Y/%m/%d') %></td>
      </tr>
    <% end %>
  </table>
