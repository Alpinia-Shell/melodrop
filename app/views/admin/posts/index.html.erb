<div class = "container">
  <h2 class= "my-3"><span style= "border-bottom: 3px solid; border-color: orange;">投稿一覧</span></h2>
  <table class = "table border-dark table-hover">
    <thead>
      <tr class= "border-top border-dark">
        <th style= "white-space: nowrap;" class= "bg-info-subtle">投稿ID</th>
        <th class= "bg-info-subtle">画像</th>
        <th class= "bg-info-subtle">タイトル</th>
        <th class= "bg-info-subtle">本文</th>
        <th class= "bg-info-subtle">投稿日</th>
        <th class= "bg-info-subtle">更新日</th>
      </tr>
    </thead>
    <% @posts.each do |post| %>
      <tr style = "height: 100px;">
        <td><%= post.id %></td>
        <td>
          <% if post.image.attached? %>
            <%= image_tag post.image, size: "100x100" %>
          <% else %>
            <span class= "text-danger"><%= "※no_image" %></span>
          <% end %>
        </td>
        <td><%= link_to admin_post_path(post) do %>
              <%= post.title %>
            <% end %>
        </td>
        <td><div class= "table-text-truncate"><%= post.body %></div></td>
        <td><%= post.created_at.strftime('%Y/%m/%d') %></td>
        <td><%= post.updated_at.strftime('%Y/%m/%d') %></td>
      </tr>
    <% end %>
  </table>
  <%= paginate @posts %>
</div>
