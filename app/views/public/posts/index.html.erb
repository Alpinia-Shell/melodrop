
<div class = "row">
  <div class ="col-2">
    <%= render 'public/users/sidebar' %>
  </div>

  <div class = "col-8 mt-5">
    <% @posts.each do |post| %>
      <%= link_to post_path(post) do %>
        <div class = "card mb-5 shadow rounded-4" style="width: 100%; max-width: 60rem; height: 30rem;">
          <div class = "row">
            <div class = "col-2">
              <div class = "pt-3 text-center">
                <%= image_tag post.user.get_profile_image(100,100), class:"rounded-circle border border-black" %>
                <div class = "mt-3">
                  <%= post.user.name %>
                </div>
              </div>
            </div>
            <div class= "col-8 d-flex flex-column text-center justify-content-center">
              <h3><%= post.title %></h3>
              <div style="width: 300px; height: 300px; background-color: #f0f0f0;" class="mx-auto d-flex align-items-center justify-content-center rounded">
                <%= image_tag post.image, style: "max-height: 100%; max-width: 100%; object-fit: contain;" %>
              </div>
              <%= post.body %>
            </div>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>
</div>